<script type="text/javascript">
   $(document).ready(function() {	
       // Submit Form
       $('#submitForm').click(function() {
       	$('#form').submit();
       });
       
       $('#form input').keydown(function(e) {
   		if (e.keyCode == 13) {
   			$('#form').submit();
   		}
   	});
   });	
</script>